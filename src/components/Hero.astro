---
import { Button } from "free-astro-components";
import GalaxieSVG from "./logo/logo.svg";
import { Image } from "astro:assets";
import surgicalTable from "../assets/hero/surgical-table.png";
import surgicalLamp from "../assets/hero/surgical-lamp.webp";
import trolley from "../assets/hero/trolley.webp";
import monitor from "../assets/hero/monitor.webp";
---

<section class="relative pt-20 lg:pt-32 pb-20 overflow-hidden">
  <div class="container mx-auto px-6 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-8 items-center">
      <!-- Left Content -->
      <div
        class="flex flex-col gap-8 z-10"
        data-aos="fade-right"
        data-aos-duration="1000"
      >
        <div class="space-y-4">
          <!-- <div
            class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 text-primary text-sm font-medium w-fit"
          >
            <span class="relative flex h-2 w-2">
              <span
                class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"
              ></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"
              ></span>
            </span>
            Leader en équipement médical
          </div> -->

          <h1
            class="text-4xl lg:text-5xl xl:text-6xl font-bold text-gray-900 leading-tight"
          >
            L'excellence médicale <br />
            <span class="text-primary">sans compromis</span>
          </h1>

          <p class="text-lg text-gray-600 max-w-xl leading-relaxed">
            Votre partenaire de confiance pour des équipements de pointe.
          </p>
        </div>

        <ul class="space-y-4">
          <li class="flex items-center gap-3 text-gray-700">
            <div
              class="flex-shrink-0 w-10 h-10 rounded-full flex items-center justify-center text-primary"
            >
              <GalaxieSVG class="w-6 h-6" />
            </div>
            <span class="font-medium">Conseil d’experts et démonstrations</span>
          </li>
          <li class="flex items-center gap-3 text-gray-700">
            <div
              class="flex-shrink-0 w-10 h-10 rounded-full flex items-center justify-center text-primary"
            >
              <GalaxieSVG class="w-6 h-6" />
            </div>
            <span class="font-medium"
              >Support technique et garantie constructeur</span
            >
          </li>
          <li class="flex items-center gap-3 text-gray-700">
            <div
              class="flex-shrink-0 w-10 h-10 rounded-full flex items-center justify-center text-primary"
            >
              <GalaxieSVG class="w-6 h-6" />
            </div>
            <span class="font-medium"
              >Installation professionnelle et suivi technique</span
            >
          </li>
        </ul>

        <div class="flex flex-wrap gap-4 pt-4 justify-end">
          <Button
            href="/galaxie-medicale/catalog"
            size="lg"
            label="Consultez notre catalogue"
            icon="arrow-right"
            iconPosition="right"
            class="text-white px-6 py-3 text-md md:text-lg font-semibold rounded-lg transition-all duration-500 transform hover:scale-105 bg-primary hover:shadow-2xl shadow-primary/50 shadow-lg"
            data-aos="fade-right"
            data-aos-delay="1400"
            data-aos-duration="2500"
          />
        </div>
      </div>

      <!-- Right Content (Hero Scene) -->
      <div
        class="relative lg:h-[600px] flex items-center justify-center perspective-1000"
        data-aos="fade-left"
        data-aos-duration="1200"
        data-aos-delay="200"
      >
        <!-- Scene Container -->
        <div
          class="relative w-full max-w-[650px] aspect-square md:aspect-[4/3] flex items-center justify-center"
        >
          <!-- 1. Surgical Lamp (Top Center - Overhead) -->
          <div
            class="absolute -top-10 left-1/2 -translate-x-1/2 w-[200px] md:w-[280px] z-30 animate-float-delayed origin-top"
          >
            <Image
              src={surgicalLamp}
              alt="Éclairage opératoire LED"
              class="w-full h-auto object-contain drop-shadow-2xl"
            />
          </div>

          <!-- 2. Surgical Table (Center Bottom - Anchor) -->
          <div
            class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[280px] md:w-[400px] z-20 animate-float"
          >
            <Image
              src={surgicalTable}
              alt="Table chirurgicale électrique"
              class="w-full h-auto object-contain drop-shadow-2xl"
            />
          </div>

          <!-- 3. Monitor (Right Flank) -->
          <div
            class="absolute top-20 -right-4 md:right-0 w-[140px] md:w-[180px] z-10 animate-float-reverse opacity-90 hover:opacity-100 transition-opacity duration-300"
          >
            <Image
              src={monitor}
              alt="Moniteur multiparamétrique"
              class="w-full h-auto object-contain drop-shadow-xl"
            />
          </div>

          <!-- 4. Trolley (Left Flank) -->
          <div
            class="absolute bottom-10 -left-4 md:left-0 w-[130px] md:w-[160px] z-10 animate-float-delayed opacity-90 hover:opacity-100 transition-opacity duration-300"
          >
            <Image
              src={trolley}
              alt="Chariot médical"
              class="w-full h-auto object-contain drop-shadow-xl"
            />
          </div>

          <!-- Glass Card Stats (Floating) -->
          <div
            class="absolute bottom-0 right-0 md:-right-24 bg-white/80 backdrop-blur-xl border border-white/60 p-5 rounded-2xl shadow-[0_8px_30px_rgb(0,0,0,0.12)] max-w-[340px] z-40 hidden md:block"
          >
            <div class="flex flex-col gap-4">
              <!-- Stat 1 -->
              <div class="flex items-center gap-4">
                <div
                  class="w-10 h-10 rounded-full bg-blue-50 flex items-center justify-center text-primary"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"
                    ></path><circle cx="9" cy="7" r="4"></circle><path
                      d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path
                      d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg
                  >
                </div>
                <div class="text-xl font-bold text-primary leading-none">
                  +<span data-countup="152" class="countup">152</span>
                </div>
                <div class="text-md font-medium text-gray-500 mt-1">
                  Partenaires médicaux
                </div>
              </div>

              <!-- Divider -->
              <div class="h-px w-full bg-gray-100"></div>

              <!-- Stat 2 -->
              <div class="flex items-center gap-4">
                <div
                  class="w-10 h-10 rounded-full bg-blue-50 flex items-center justify-center text-primary"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path
                      d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"
                    ></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"
                    ></polyline><line x1="12" y1="22.08" x2="12" y2="12"
                    ></line></svg
                  >
                </div>
                <div class="text-xl font-bold text-primary leading-none">
                  +<span data-countup="650" class="countup">650</span>
                </div>
                <div class="text-md font-medium text-gray-500 mt-1">
                  Produits référencés
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Decorative Circle behind -->
        <div
          class="absolute inset-0 bg-gradient-to-tr from-blue-100/40 to-transparent rounded-full scale-90 -z-10 blur-2xl"
        >
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  @keyframes float-delayed {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes float-reverse {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(10px);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 7s ease-in-out infinite 1s;
  }

  .animate-float-reverse {
    animation: float-reverse 8s ease-in-out infinite 0.5s;
  }

  .perspective-1000 {
    perspective: 1000px;
  }
</style>
