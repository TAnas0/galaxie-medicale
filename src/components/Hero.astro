---
// import Button from './ui/Button.astro';
import { Button } from 'free-astro-components';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components'
import xray1Image from '../assets/hero/xray1.webp'
import surgery1Image from "../assets/hero/surgery1.webp";
import nurse1Image from "../assets/hero/nurse1.webp";
import medicalImage from "../assets/hero/medical-room.webp";
import microscopeImage from "../assets/hero/microscope.webp";
import nurseImage from "../assets/hero/nurse-patient.webp";
import pillsImage from "../assets/hero/pills.webp";
// import ArrowRight from '@iconify-icons/heroicons-outline/arrow-right'; // or use any icon source
// import { Icon } from '@iconify-icon/astro'; // use if you're using Iconify
---
<section
  class="relative px-4 pt-32 sm:px-6 lg:px-8"
> 
  <!-- Floating circular images -->
  <div class="absolute inset-0 z-10 pointer-events-none opacity-70">
    <div>
      <Image src={nurse1Image} class="absolute max-w-64 max-h-64 md:block rounded-full object-cover top-[65%] right-8 sm:right-12 md:right-20 shadow-2xl" alt="Medical equipment">
    </div>
    <div>
      <Image src={medicalImage} class="absolute max-w-sm max-h-sm hidden md:block rounded-full object-cover top-[12%] left-18 sm:left-22 md:left-32 shadow-2xl z-2" alt="Medical equipment">
    </div>
    <div>
      <Image src={microscopeImage} class="absolute max-w-sm max-h-sm hidden md:block rounded-full object-cover top-[50%] left-[10%] sm:right-48 md:right-[56%] shadow-2xl z-1" alt="Medical equipment">
    </div>
    <div>
      <Image src={nurseImage} class="absolute max-w-32 max-h-32 hidden md:block rounded-full object-cover top-[55%] left-25 sm:right-8 md:right-12 shadow-2xl z-3" alt="Medical equipment">
    </div>
    <div>
      <Image src={pillsImage} class="absolute max-w-24 max-h-24 rounded-full object-cover top-[25%] right-16 sm:right-[50%] md:right-[20%] shadow-2xl z-3" alt="Medical equipment">
    </div>
    <div>
      <Image src={surgery1Image} class="absolute max-w-sm max-h-sm rounded-full object-cover top-[20%] right-6 sm:right-0 md:right-12 shadow-2xl" alt="Medical equipment">
    </div>
  </div>

  <div id="hero-content" class="max-w-7xl mx-auto z-10 relative">
    <div class="text-center">
      <!-- <h1
        class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-8 leading-tight"
      >
        Galaxie Médicale
      </h1> -->

      <p
        class="text-4xl sm:text-2xl text-gray-600 mb-16 max-w-4xl mx-auto leading-relaxed mt-32 bg-white/80 text-black px-4 py-2 rounded"
      >
        Dispositifs médicaux performants pour les professionnels de santé.
        <br>
        Fiables, précis, adaptés au diagnostic, au traitement et à l’analyse.
      </p>



    <div class="mt-8 relative">
      <div
        class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-xl border border-gray-200 max-w-4xl mx-auto"
      >
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div>
            <div class="text-3xl font-bold text-blue-600 mb-2">+10</div>
            <div class="text-gray-600">ans d’expérience</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-blue-600 mb-2">+100</div>
            <div class="text-gray-600">Partenaires Médicaux</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-blue-600 mb-2">+500</div>
            <div class="text-gray-600">Produits Médicaux</div>
          </div>
        </div>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-12">
      <Button
        href="/galaxie-medicale/catalog"
        size="lg"
        label="Consultez notre catalogue..."
        icon='arrow-right' iconPosition='right'
        class="text-white px-8 py-3 text-lg font-semibold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg"
      >
        Voir le catalogue
      </Button>

      <!-- <Button
        variant="outline"
        size="lg"
        label="Contact Us"
        class="border-2 border-red-600 text-red-600 hover:bg-red-600 hover:text-white px-8 py-3 text-lg font-semibold rounded-lg transition-all duration-300"
      >
        Contact Us
      </Button> -->
    </div>
  </div>
  </div>
</section>


