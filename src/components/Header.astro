---
import { Icon } from "astro-icon/components";
---
<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-3 flex items-center justify-between">
    <!-- Mobile Menu Button -->
    <button id="mobile-menu-btn" class="lg:hidden p-2" aria-label="Toggle Menu">
      <svg
        class="w-6 h-6 text-gray-800"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- Logo -->
    <a href="/" class="flex-shrink-0">
      <img
        src="/public/logo.png"
        alt="Locamed Logo"
        class="h-12"
      />
    </a>

    <!-- Search Bar -->
    <div class="hidden lg:flex flex-1 max-w-xl mx-6">
      <input
        type="search"
        placeholder="Quel produit recherchez-vous ?"
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <!-- User Actions -->
    <div class="flex items-center gap-4">
      <a
        href="tel:0666135507"
        class="flex items-center gap-2 text-orange-500 font-medium border"
      >
        <Icon name="heroicons:phone" />
        06 67 89 12 34
      </a>
    </div>
  </div>

  <!-- Mobile Menu Panel -->
  <div id="mobile-menu" class="lg:hidden hidden bg-gray-100 border-t px-4 py-3">
    <!-- Search input on mobile -->
    <input
      type="search"
      placeholder="Quel produit recherchez-vous?"
      class="w-full px-4 py-2 border border-gray-300 rounded-md mb-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
    <!-- Navigation Links -->
    <nav class="flex flex-col gap-2 text-sm">
      <a href="#" class="hover:text-blue-600">Acceuil</a>
      <a href="#" class="hover:text-blue-600">Catalogue</a>
      <a href="#" class="hover:text-blue-600">Podologie</a>
      <a href="#" class="hover:text-blue-600">Chaussures</a>
      <a href="#" class="hover:text-blue-600">Catalogue</a>
      <a href="#" class="hover:text-blue-600">Magasins</a>
    </nav>
  </div>

  <!-- Secondary Navbar (for desktop) -->
  <div class="hidden lg:block bg-gray-100 border-t">
    <div class="container mx-auto px-4 py-2 flex items-center justify-between">
      <nav class="flex gap-4 text-sm">
        <a href="#" class="hover:text-blue-600">Acceuil</a>
        <a href="#" class="hover:text-blue-600">Catalogue</a>
        <a href="#" class="hover:text-blue-600">Podologie</a>
        <a href="#" class="hover:text-blue-600">Chaussures</a>
        <a href="#" class="hover:text-blue-600">Catalogue</a>
        <a href="#" class="hover:text-blue-600">Magasins</a>
      </nav>
    </div>
  </div>

  <script>
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");
    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  </script>
</header>
