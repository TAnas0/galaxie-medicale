        </nav>

        {/* Search Bar */}
        <div class="flex-1 max-w-md mx-8 hidden md:block">
          <div class="relative">
            <input
              type="search"
              placeholder="Quel produit recherchez-vous ?"
              class="w-full px-4 py-2 border border-input rounded-lg bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent"
              aria-label="Rechercher un produit"
            />
            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
              <svg
                class="w-4 h-4 text-muted-foreground"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width={2}
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
          </div>
        </div>

        {/* Mobile Menu Button */}
        <button
          class="lg:hidden p-2 hover:bg-accent rounded-lg transition-colors"
          aria-label="Ouvrir le menu de navigation"
          aria-expanded="false"
        >
          <Icon name="heroicons:bars-4" />
          <!-- <Menu size={24} /> -->
        </button>
      </div>

      {/* Mobile Search Bar */}
      <div class="md:hidden pb-4">
        <div class="relative">
