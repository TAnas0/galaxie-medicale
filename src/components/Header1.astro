      <div class="flex items-center justify-between h-16">
        {/* Desktop Navigation */}
        <nav
          class="hidden lg:flex items-center space-x-8"
          role="navigation"
          aria-label="Navigation principale"
        >
          {/* Logo */}
          <img
            src="/galaxie-medicale/img/galaxie-medicale-stretched.jpg"
            alt="Galaxie Medicale Logo"
            class="h-14"
          />
          {/* Accueil */}
          <a
            href="/galaxie-medicale"
            class="text-foreground hover:text-primary transition-colors font-medium"
          >
            Accueil
          </a>

          {/* Catalog Dropdown */}
          <div class="relative group">
            <a
              class="text-foreground hover:text-primary transition-colors font-medium"
              href="/galaxie-medicale/catalog"
            >
              Catalogue
            </a>

