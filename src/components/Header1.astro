<header
  class="w-full fixed top-0 z-50 bg-opacity-95 backdrop-blur-sm shadow-md border-b"
>
  {/* Top Bar */}
  <div
    class="bg-primary text-primary-foreground backdrop-blur-sm shadow-md border-b"
  >
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between h-10">
        {/* Logo */}
        <div class="flex items-center">
