---
import Card from "../ui/Card.astro";
import products from "../../data/products";
---
<div
  class="grid md:grid-cols-3 ltablet:grid-cols-3 lg:grid-cols-3 gap-x-6 ptablet:gap-x-4 gap-y-16 pt-10"
>
  {
    products.map((product) => (
      <div
        x-show={`activeCategory === 'all' || activeCategory === '${product.category}'`}
      >
        <Card class="'p-1'">
          <div class="relative w-full h-40 rounded-lg">
            <img
              class="absolute aspect-[16/9] bottom-0 inset-x-0 mx-auto w-full rounded-lg"
              src={product.image}
              alt={product.name}
            />
          </div>
          <div class="font-sans mt-3">
            <h4 class="font-semibold text-muted-800 dark:text-muted-100">
              {product.name}
            </h4>
            <p class="text-sm text-muted-400">{product.category}</p>
          </div>
          <div class="mt-2">
            <p class="text-sm ptablet:text-xs text-muted-500 dark:text-muted-400">
              {product.description}
            </p>
          </div>
          <div class="flex items-center justify-end gap-2">
            <button>See details</button>
          </div>
        </Card>
      </div>
    ))
  }
</div>
