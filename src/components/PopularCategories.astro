---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import surgeryImage from "../assets/categories/surgery2.webp";
import monitoring1Image from "../assets/categories/monitoring1.webp";
import emergency1Image from "../assets/categories/emergency1.webp";
import sterilizationImage from "../assets/categories/sterilization.webp";
import accessoriesImage from "../assets/categories/accessories.webp";
import medicalFurnitureImage from "../assets/categories/medical-furniture.webp";

const categories = [
  {
    category: "medical_furniture",
    title: "Mobilier Médical",
    description: "Lits, chariots et postes de travail ergonomiques pour le confort des patients et soignants.",
    image: medicalFurnitureImage,
  },
  {
    category: "diagnostic",
    title: "Diagnostic et Surveillance",
    description: "Solutions d’imagerie et de monitoring de haute précision pour des diagnostics fiables.",
    image: monitoring1Image,
  },
  {
    category: "emergency",
    title: "Urgence et Réanimation",
    description: "Défibrillateurs, respirateurs et équipements vitaux pour la gestion des situations critiques.",
    image: emergency1Image,
  },
  {
    category: "surgery",
    title: "Bloc Opératoire",
    description: "Tables, éclairages et instruments chirurgicaux pour des interventions sécurisées.",
    image: surgeryImage,
  },
  {
    category: "sterilisation",
    title: "Stérilisation et Hygiène",
    description: "Autoclaves et laveurs-désinfecteurs garantissant une asepsie irréprochable.",
    image: sterilizationImage,
  },
  {
    category: "accessories_consumables",
    title: "Accessoires et Consommables",
    description: "L'essentiel pour le fonctionnement quotidien de vos équipements médicaux.",
    image: accessoriesImage,
  },
];
---

<section id="categories" class="py-16 bg-white relative overflow-hidden">
  <div class="container mx-auto relative z-10">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-8" data-aos="fade-up" data-aos-duration="1000">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-100 text-primary text-sm font-medium mb-4">
        <span class="w-2 h-2 rounded-full bg-primary"></span>
        Notre Catalogue
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        Des solutions complètes pour <br/>
        <span class="text-primary">chaque spécialité</span>
      </h2>
      <p class="text-lg text-gray-600">
        Explorez notre gamme d'équipements sélectionnés parmi les meilleures marques mondiales pour répondre à vos exigences cliniques.
      </p>
    </div>

    <!-- Categories Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        categories.map((category, index) => (
          <a 
            href={`/galaxie-medicale/catalog/${category.category}`} 
            class="group block bg-white rounded-2xl overflow-hidden border border-gray-100 shadow-sm hover:shadow-[0_8px_30px_rgb(0,0,0,0.12)] transition-all duration-500 hover:-translate-y-1"
            data-aos="fade-up" 
            data-aos-delay={index * 100}
          >
            <!-- Image Container -->
            <div class="relative h-64 overflow-hidden bg-gray-100">
              <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/5 transition-colors duration-500 z-10"></div>
              <Image 
                src={category.image} 
                alt={category.title}
                width={600}
                height={400}
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700 ease-out"
              />
            </div>
            
            <div class="p-4">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary transition-colors">
                  {category.title}
                </h3>
                <div class="w-8 h-8 rounded-full bg-blue-50 flex items-center justify-center text-primary opacity-0 -translate-x-4 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300">
                  <Icon name="heroicons:arrow-right" class="w-4 h-4" />
                </div>
              </div>
              <p class="text-gray-600 text-sm line-clamp-2">
                {category.description}
              </p>
            </div>
          </a>
        ))
      }
    </div>
    
    <!-- View All Button -->
    <div class="text-center mt-16" data-aos="fade-up" data-aos-delay="600">
      <a 
        href="/galaxie-medicale/catalog" 
        class="inline-flex items-center gap-2 p-4 bg-primary text-white rounded-full font-semibold hover:bg-primary/90 hover:shadow-lg hover:shadow-primary/25 transition-all hover:-translate-y-1"
      >
        Consultez notre catalogue
        <Icon name="heroicons:arrow-right" class="w-5 h-5" />
      </a>
    </div>
  </div>
</section>