const categories = [
  {
    title: "Appareils de Diagnostic",
    description: "Équipements avancés pour l’imagerie et le diagnostic médical de précision.",
    icon: "🔬",
    image: "img/categories/surgery2.jpg"
  },
  {
    title: "Équipements de Laboratoire",
    description: "Instruments de haute précision pour l’analyse et la recherche en laboratoire.",
    icon: "⚗️",
    image: "img/categories/surgery1.jpg"
  },
  {
    title: "Surveillance des Patients",
    description: "Systèmes de monitoring en temps réel pour un suivi médical optimal.",
    icon: "📊",
    image: "img/categories/lab1.jpg"
  },
  {
    title: "Instruments Chirurgicaux",
    description: "Outils et équipements chirurgicaux de qualité supérieure pour interventions sûres et efficaces.",
    icon: "🏥",
    image: "img/categories/emergency2.jpg"
  },
  {
    title: "Équipements d’Urgence",
    description: "Matériel critique pour les soins intensifs et les interventions d’urgence.",
    icon: "🚑",
    image: "img/categories/emergency1.jpg"
  },
  // {
  //   title: "Dispositifs de Rééducation",
  //   description: "Appareils pour la thérapie physique et la récupération fonctionnelle des patients.",
  //   icon: "♿",
  // },
  {
    title: "Matériel de Stérilisation",
    description: "Solutions et équipements pour la stérilisation et l’hygiène en milieu médical.",
    icon: "🧼",
    image: "img/categories/monitoring1.jpg"
  },
  {
    title: "Mobilier Médical",
