---

<section class="py-16 px-4 sm:px-6 lg:px-8 bg-gray-50">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Nos Catégories
      </h2>
      <!-- <p class="text-lg text-gray-600">
        Découvrez notre large gamme complète d’équipements médicaux
      </p> -->
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {categories.map((category, index) => (
        <Card 
          key={index} 
          class="hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 border-0 shadow-md  bg-cover bg-center bg-no-repeat min-h-124"
          style={`background-image: url('${category.image}');`}
        >
          {/* <img src="img/categories/surgery1.jpg" alt=""> */}
          <CardHeader className="text-center pb-4 bg-white">
            {/* <div class="text-4xl mb-3">{category.icon}</div> */}
            <CardTitle className="text-xl font-semibold text-gray-900">
              {category.title}
            </CardTitle>
          </CardHeader>
          <CardContent className="text-center">
            <CardDescription className="text-gray-600 mb-4">
              {category.description}
            </CardDescription>
            {/* <Button 
              variant="ghost" 
              class="text-blue-600 hover:text-blue-700 hover:bg-blue-50 transition-colors duration-300"
            > */}
              Voir Produits
              {/* <ArrowRight class="ml-2 h-4 w-4" /> */}
            {/* </Button> */}
