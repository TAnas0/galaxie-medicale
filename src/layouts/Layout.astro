---
import '@fontsource/inter';
import '@fontsource-variable/manrope';
import '@fontsource/ibm-plex-sans';
import '@fontsource/plus-jakarta-sans';
import { AstroFont } from "astro-font";

import surgery1Image from "../assets/hero/surgery1.webp";
import nurse1Image from "../assets/hero/nurse1.webp";
import medicalImage from "../assets/hero/medical-room.webp";
import microscopeImage from "../assets/hero/microscope.webp";
import nurseImage from "../assets/hero/nurse-patient.webp";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/galaxie-medicale/favicon.svg" /> -->
    <AstroFont
      config={[
        {
          src: [],
          name: "Manrope",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Manrope:ital,wght@0,400;0,600;1,400;1,700&display=swap",
          preload: true,
          display: "swap",
        //   selector: "body",
          fallback: "sans-serif",
        },
		{
          src: [],
          name: "Inter",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Inter:ital,wght@0,400;0,600;1,400;1,700&display=swap",
          preload: true,
          display: "swap",
        //   selector: "body",
          fallback: "sans-serif",
        },
		{
          src: [],
          name: "IBM Plex Sans",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,400;0,600;1,400;1,700&display=swap",
          preload: true,
          display: "swap",
        //   selector: "body",
          fallback: "sans-serif",
        },
		{
          src: [],
          name: "Plus Jakarta Sans",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,400;0,600;1,400;1,700&display=swap",
          preload: true,
          display: "swap",
        //   selector: "body",
          fallback: "sans-serif",
        },
      ]}
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Manrope:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;600&family=Plus+Jakarta+Sans:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Galaxie Medicale</title>
    <link rel="preload" as="image" href={surgery1Image.src} />
    <link rel="preload" as="image" href={nurse1Image.src} />
    <link rel="preload" as="image" href={medicalImage.src} />
    <link rel="preload" as="image" href={microscopeImage.src} />
    <link rel="preload" as="image" href={nurseImage.src} />
  </head>
  <body class="bg-gray-50">
    <div class="gradient-layer"></div>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Inter";
  }

  .gradient-layer {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: radial-gradient(at top left, oklch(54.6% 0.245 262.881), #ffffff 25%);
    z-index: -1;
    opacity: 30%;
  }
</style>
