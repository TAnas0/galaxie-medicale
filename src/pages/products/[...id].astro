const relatedProducts = products.filter(p => (p.data.category == product.data.category)).slice(0,3)

specifications = product.data.technical_specs
  .split('\n')
  .map(line => line.trim())
  .filter(line => line) // remove empty lines
  .map(line => {
    if (line.includes(":")) {
      const [label, ...rest] = line.split(':');
      // const value = rest.join(':').trim(); // handles any extra colons in value
      return {
        label: label.trim(),
        value: rest[0].trim(),
      };
    } else {
      return {
        label: "Autres fonctionalités",
        value: line
      }
    }
  });

console.log(specifications);
specifications = (() => {
  const features = specifications
    .filter(item => item.label === 'Autres fonctionalités')
    .map(item => item.value)
    .join('\n'); // join with newline

  if (features) {
    return [
      ...specifications.filter(item => item.label !== 'Autres fonctionalités'),
      { label: 'Autres fonctionalités', value: features }
    ];
  } else {
    return specifications
  }
})();
