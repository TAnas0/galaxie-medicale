---
import Layout from "../../layouts/Layout.astro";
import "../../styles/global.css";

import "../../styles/global.css";
import { Image } from "astro:assets";

import { Icon } from "astro-icon/components";

import Card from "../../components/ui/Card.astro";
import Carousel from "../../components/ui/Carousel.jsx";
import CardHeader from "../../components/ui/CardHeader.astro";
import CardTitle from "../../components/ui/CardTitle.astro";
import CardContent from "../../components/ui/CardContent.astro";
import Footer from "../../components/ui/Footer.astro";
import Header from "../../components/Header.astro";
import Button from "../../components/ui/Button.astro";
import ProductCard from "../../components/catalog/ProductCard.astro";

import { formatAttributeValue } from "../../utils/formatters";
import { CATEGORY_HIGHLIGHTS } from "../../config/productHighlights";

import { getCollection, getEntry, getEntries } from "astro:content";

export async function getStaticPaths() {
  // const products = await getCollection("products");
  const products = await getCollection("productsFull");
  return products.map((product) => ({
    params: { id: product.id },
  }));
}

const { params } = Astro;
// const products = await getCollection("products");
const products = await getCollection("productsFull");
let product = products.find((p) => p.id === params.id);

if (!product) {
  throw new Error(`Product not found: ${params.id}`);
}

const brand = await getEntry(product.data.brand);


// Highlights logic moved to config/productHighlights.js
// Function to decide what is highlighted
function applyHighlights(product) {
  const categoryKey = product.data.category?.canonical || "";
  const alwaysHighlight = CATEGORY_HIGHLIGHTS[categoryKey] || [];

  if (product.data.attributes) {
    product.data.attributes.forEach((attr) => {
      // Preserve existing manual highlighted flags
      if (!attr.highlighted && alwaysHighlight.includes(attr.canonical_name)) {
        attr.highlighted = true;
      }
    });
  }

  return product;
}
const highlights = applyHighlights(product).data.attributes.filter(
  (attr) => attr.highlighted,
);

const electricalSpecs = product.data.attributes?.filter(
  (attr) => attr.category === "Electrical" && attr.type !== "boolean",
);
product.data.attributes = product.data.attributes?.filter(
  (attr) => !electricalSpecs?.includes(attr),
);
const certificationsRefs = product.data.compliance?.certifications ?? [];
const certifications = await getEntries(certificationsRefs);
const standards = product.data.compliance?.standards;

const relatedProducts = products
  .filter(
    (p) =>
      p.data.category.canonical == product.data.category.canonical &&
      p.id !== product.id,
  )
  .slice(0, 4);


// Highlight and prioritize certifications and standards
// TODO Order is important
const HIGHLIGHT_CERTS_STANDARDS = [
  "CE", "ISO 13485", "FDA", "EN 13060", "ISO 14937", "ISO 14971", "IEC 60601", "ISO 10993",
  // IDs or Names
  "ce", "iso-13485", "fda", "en-13060"
];

const highlightedCerts = certifications.filter(
  (cert) => HIGHLIGHT_CERTS_STANDARDS.includes(cert.data.name) || HIGHLIGHT_CERTS_STANDARDS.includes(cert.id)
);

const highlightedStandards = product.data.compliance?.standards?.filter((std) =>
  HIGHLIGHT_CERTS_STANDARDS.includes(std),
) ?? [];
---

<Layout
  title={product.data.name.fr}
  description={product.data.short_description.fr}
  image={product.data.images[0]
    ? product.data.images[0].src
    : Astro.url + "/galaxie-medicale.png"}
>
  <Header />

  <div class="min-h-screen pt-26">
    {/* Main Content */}
    <main class="container mx-auto px-4 py-6">
      {/* Product Hero Section */}
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-8">
        {/* Product Information */}
        <div class="space-y-6 flex flex-col">
          <div class="">
            <h1
              class="text-center lg:text-left text-3xl lg:text-4xl font-extrabold text-gray-900 tracking-tight mb-4"
            >
              {product.data.name.fr || product.data.name.en}
            </h1>
            <div
              class="flex flex-wrap gap-2 mb-6 justify-center lg:justify-start"
            >
              {
                product.data.availability == "out_of_stock" && (
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 border border-red-200">
                    Rupture de stock
                  </span>
                )
              }
              {
                product.data.category.display.fr && (
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-700 border border-blue-200">
                    {product.data.category.display.fr ||
                      product.data.category.display.en}
                  </span>
                )
              }
            </div>
            <div class="lg:hidden mb-6">
              {
                product.data.images?.length ? (
                  <Carousel images={product.data.images} client:load />
                ) : null
              }
            </div>

            <div
              class="text-lg text-gray-700 whitespace-pre-line leading-relaxed mb-2"
            >
              {
                product.data.full_description.fr ||
                  product.data.full_description.en
              }

              <!-- Highlights Grid -->
              <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 gap-4">
                {
                  highlights?.map((highlight, index) => (
                    <div class="flex items-start p-3 bg-gray-50 rounded-lg border border-gray-100">
                      <div class="flex-shrink-0 mr-3 text-primary">
                        <Icon name="heroicons:check-circle" class="w-5 h-5" />
                      </div>
                      <div>
                        <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">
                          {highlight.display_label.fr ||
                            highlight.display_label.en}
                        </p>
                        <p class="text-sm font-semibold text-gray-900">
                          {formatAttributeValue(highlight)}
                        </p>
                      </div>
                    </div>
                  ))
                }
              </div>
            </div>

          </div>

          <div class="flex flex-wrap gap-2 justify-start">
            {
              highlightedCerts?.map((cert) => (
                <div class="flex items-center gap-2 px-3 py-1.5 bg-white border border-gray-200 rounded-lg shadow-sm">
                  {cert.data.badge ? (
                    <Image
                      src={cert.data.badge}
                      alt={cert.data.name}
                      class="h-8 w-auto object-contain"
                    />
                  ) : (
                    <Icon
                      name="heroicons:shield-check"
                      class="text-2xl text-green-600"
                    />
                  )}
                  <div class="flex flex-col leading-tight">
                    <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">Certifié</span>
                    <span class="text-sm font-bold text-gray-900">{cert.data.name}</span>
                  </div>
                  {cert.data.short_description && (
                    <div class="group relative ml-1">
                      <Icon name="heroicons:information-circle" class="w-4 h-4 text-gray-400 cursor-help hover:text-blue-500 transition-colors" />
                      <div class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 w-48 p-2 bg-gray-800 text-white text-xs rounded shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all z-10 pointer-events-none text-center">
                        {cert.data.short_description}
                        <div class="absolute top-100 left-1/2 -translate-x-1/2 border-4 border-transparent border-t-gray-800"></div>
                      </div>
                    </div>
                  )}
                </div>
              ))
            }
             {
              highlightedStandards?.map((std) => (
                <div class="flex items-center gap-1 px-2 py-1 bg-gray-50 border border-gray-200 rounded-lg shadow-sm opacity-80">
                   <Icon
                    name="heroicons:document-text"
                    class="text-xl text-gray-500"
                  />
                  <span class="text-sm font-medium text-gray-700">{std}</span>
                </div>
              ))
            }
          </div>
          {/* Brand Info */}
          <div
            class="flex items-center gap-3 bg-white border border-gray-200 w-fit px-4 py-2 rounded-xl shadow-sm self-start mt-2"
          >
            {brand.data.logo ? (
              <Image
                src={brand.data.logo}
                alt={brand.data.name}
                class="h-10 w-auto object-contain max-w-[120px]"
              />
            ) : null}
             <span class="font-bold text-gray-900">{brand.data.name}</span>
          </div>
        </div>
        {/* Image Carousel */}
        <div class="hidden lg:block">
          {
            product.data.images?.length ? (
              <Carousel images={product.data.images} client:load />
            ) : null
          }
        </div>
      </div>

      {/* Specifications */}
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-2 mb-12">
        <div class="border border-gray-300 rounded-lg bg-white">
          <Card>
            <CardHeader className="bg-gray-50/50 border-b border-gray-100 mb-2">
              <CardTitle className="flex items-center text-gray-900">
                <div class="pr-1 pl-2">
                  <Icon name="heroicons:document" />
                </div>
                Spécifications techniques
              </CardTitle>
            </CardHeader>
            <CardContent className="space-y-3">
              {
                product.data.attributes?.map((attribute, index) => (
                  <div class="flex justify-between items-center py-1 border-b border-gray-100 last:border-b-0">
                    <span class="text-sm text-gray-600">
                      {attribute.display_label.fr || attribute.display_label.en}
                    </span>
                    <span class="text-sm font-medium text-gray-900 whitespace-pre-line">
                      {formatAttributeValue(attribute)}
                    </span>
                  </div>
                ))
              }
            </CardContent>
          </Card>
        </div>

        <div class="grid grid-cols-1 gap-2 self-start">
          {
            electricalSpecs?.length ? (
              <Card class="border border-gray-300 rounded-lg bg-white">
                <CardHeader className="bg-gray-50/50 border-b border-gray-100 mb-2">
                  <CardTitle className="flex items-center text-gray-900">
                    <div class="pr-1 pl-2">
                      <Icon name="heroicons:bolt" />
                    </div>
                    Spécifications électriques
                  </CardTitle>
                </CardHeader>
                <CardContent className="space-y-4">
                  {electricalSpecs?.map((attribute, index) => (
                    <div class="flex justify-between items-center py-1 border-b border-gray-100 last:border-b-0">
                      <span class="text-sm text-gray-600">
                        {attribute.display_label.fr ||
                          attribute.display_label.en}
                      </span>
                      <span class="text-sm font-medium text-gray-900 whitespace-pre-line">
                        {formatAttributeValue(attribute)}
                      </span>
                    </div>
                  ))}
                </CardContent>
              </Card>
            ) : null
          }
          {
            [...(certifications ?? []), ...(standards ?? [])].length > 0 ? (
              <Card class="border border-gray-300 rounded-lg bg-white">
                <CardHeader className="bg-gray-50/50 border-b border-gray-100 mb-2">
                  <CardTitle className="flex items-center text-gray-900">
                    <div class="pr-1 pl-2">
                      <Icon name="heroicons:shield-check" />
                    </div>
                    Certifications et standards
                  </CardTitle>
                </CardHeader>
                <CardContent className="space-y-3">
                  <div>
                    <ul class="list-disc list-inside space-y-1">
                      {[...certifications, ...(standards ?? []).map(s => ({ data: { name: s, short_description: null } }))].map(
                        (item, index) => (
                          <li key={index} class="flex items-center gap-2">
                             <span class="">{item.data.name}</span>
                             {item.data.short_description && (
                                <div class="group relative inline-flex items-center">
                                  <Icon name="heroicons:information-circle" class="w-4 h-4 text-gray-400 cursor-help hover:text-blue-500 transition-colors" />
                                  <div class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 w-56 p-2 bg-gray-800 text-white text-xs rounded shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all z-10 pointer-events-none text-center">
                                    {item.data.short_description}
                                    <div class="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-gray-800"></div>
                                  </div>
                                </div>
                              )}
                          </li>
                        ),
                      )}
                    </ul>
                  </div>
                </CardContent>
              </Card>
            ) : null
          }
        </div>
      </div>

      {
        (product.data.documents?.manual ||
          product.data.documents?.specs ||
          product.data.documents?.installation_guide) && (
          <Card class="mb-12 border border-gray-200 shadow-sm overflow-hidden">
            <CardHeader className="bg-gray-50/50 border-b border-gray-100">
              <CardTitle className="flex items-center text-gray-900 text-lg pl-2">
                <div class="p-2 rounded-lg mr-1">
                  <Icon name="heroicons:arrow-down-tray" class="w-5 h-5" />
                </div>
                Documentation et resources
              </CardTitle>
            </CardHeader>
            <CardContent className="pt-2">
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-2">
                {product.data.documents?.specs && (
                  <a
                    href={product.data.documents.specs}
                    target="_blank"
                    class="group flex flex-col p-4 bg-white border border-gray-200 rounded-xl hover:border-primary/50 hover:shadow-md transition-all duration-300"
                  >
                    <div class="flex items-center gap-2">
                      <div class="p-2 bg-gray-100 rounded-lg group-hover:bg-primary/10 transition-colors">
                        <Icon
                          name="heroicons:document-text"
                          class="w-6 h-6 text-gray-500 group-hover:text-primary"
                        />
                      </div>
                      <span class="font-semibold text-gray-900 mb-1 group-hover:text-primary transition-colors">
                        Fiche technique
                      </span>
                    </div>
                  </a>
                )}
                {product.data.documents?.manual && (
                  <a
                    href={product.data.documents.manual}
                    target="_blank"
                    class="group flex flex-col p-4 bg-white border border-gray-200 rounded-xl hover:border-primary/50 hover:shadow-md transition-all duration-300"
                  >
                    <div class="flex items-center gap-2">
                      <div class="p-2 bg-gray-100 rounded-lg group-hover:bg-primary/10 transition-colors">
                        <Icon
                          name="heroicons:book-open"
                          class="w-6 h-6 text-gray-500 group-hover:text-primary"
                        />
                      </div>
                      <span class="font-semibold text-gray-900 mb-1 group-hover:text-primary transition-colors">
                        Manuel d'utilisation
                      </span>
                    </div>
                  </a>
                )}
                {product.data.documents?.installation_guide && (
                  <a
                    href={product.data.documents.installation_guide}
                    target="_blank"
                    class="group flex flex-col p-4 bg-white border border-gray-200 rounded-xl hover:border-primary/50 hover:shadow-md transition-all duration-300"
                  >
                    <div class="flex items-center gap-2">
                      <div class="p-2 bg-gray-100 rounded-lg group-hover:bg-primary/10 transition-colors">
                        <Icon
                          name="heroicons:wrench-screwdriver"
                          class="w-6 h-6 text-gray-500 group-hover:text-primary"
                        />
                      </div>
                      <span class="font-semibold text-gray-900 mb-1 group-hover:text-primary transition-colors">
                        Guide d'installation
                      </span>
                    </div>
                  </a>
                )}
              </div>
            </CardContent>
          </Card>
        )
      }

      {
        relatedProducts.length > 0 && (
          <Card class="mt-16 border border-gray-200 shadow-sm overflow-hidden">
            <CardHeader className="bg-gray-50/50 border-b border-gray-100">
              <CardTitle className="flex items-center text-gray-900 text-lg pl-2">
                <div class="p-2 rounded-lg mr-1">
                  <Icon name="heroicons:squares-plus" class="w-5 h-5" />
                </div>
                Produits recommandés
              </CardTitle>
            </CardHeader>
            <CardContent className="pt-6">
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                {relatedProducts.map((product) => (
                  <ProductCard product={product} />
                ))}
              </div>
            </CardContent>
          </Card>
        )
      }
    </main>
  </div>

      {/* Debug/Verification Popup */}
      <div class="fixed bottom-4 left-4 z-50">
        <button id="debug-trigger" class="bg-gray-900 text-white rounded-full p-3 shadow-lg cursor-pointer hover:bg-gray-800 transition-colors opacity-50 hover:opacity-100 focus:outline-none" title="Toggle Debug Info">
          <Icon name="heroicons:wrench-screwdriver" class="w-5 h-5" />
        </button>

        <div id="debug-content" class="absolute bottom-full left-0 mb-3 w-[450px] max-w-[90vw] bg-white rounded-lg shadow-2xl border border-gray-200 overflow-hidden hidden transform transition-all origin-bottom-left">
          <div class="bg-gray-50 px-4 py-2 border-b border-gray-100 flex justify-between items-center">
            <span class="text-xs font-bold text-gray-700 uppercase tracking-wider">Product Data Verification</span>
            <span class="text-[10px] text-gray-400 font-mono">ID: {product.id}</span>
          </div>
          <div class="p-2 space-y-1 max-h-[60vh] overflow-y-auto">
            {
               product.data.links && Object.entries(product.data.links).length > 0 ? (
                 Object.entries(product.data.links).map(([key, url]) => (
                    url ? (
                      <a href={url} target="_blank" class="flex items-start gap-3 p-2 hover:bg-blue-50 rounded-md group/link transition-colors border border-transparent hover:border-blue-100">
                        <Icon name="heroicons:link" class="w-4 h-4 text-gray-400 group-hover/link:text-blue-600 mt-1 flex-shrink-0" />
                        <div class="flex flex-col min-w-0 w-full">
                          <span class="text-xs font-semibold text-gray-700 capitalize group-hover/link:text-blue-700">{key.replace(/_/g, ' ')}</span>
                          <span class="text-[10px] text-gray-500 font-mono break-all leading-tight">{url}</span>
                        </div>
                      </a>
                    ) : null
                 ))
               ) : (
                 <div class="p-4 text-center text-xs text-gray-400 italic">
                   No verification links found in data.
                 </div>
               )
            }
          </div>
        </div>
      </div>

  <Footer />
</Layout>

<script is:client>
  (function() {
    function initDebugPopup() {
      const trigger = document.getElementById('debug-trigger');
      const content = document.getElementById('debug-content');

      if (trigger && content) {
        // Clone to remove old listeners if re-initializing
        const newTrigger = trigger.cloneNode(true);
        trigger.parentNode.replaceChild(newTrigger, trigger);
        
        // We don't clone content to preserve state if possible, but safe to just add listener if we are careful
        // Actually, for simplicity in MPAs, just adding listener is fine. 
        // But let's stick to the element we have.
        
        newTrigger.addEventListener('click', (e) => {
          e.stopPropagation();
          content.classList.toggle('hidden');
        });

        const closePopup = (e) => {
          if (!content.classList.contains('hidden') && !content.contains(e.target) && !newTrigger.contains(e.target)) {
            content.classList.add('hidden');
          }
        };
        
        document.removeEventListener('click', closePopup); // Attempt cleanup - though anonymous function won't match. 
        // In MPA, the page reloads, so it is fine.
        document.addEventListener('click', closePopup);
        
        content.addEventListener('click', (e) => {
          e.stopPropagation();
        });
      }
    }

    // Run on load
    initDebugPopup();
    
    // Astro View Transitions support
    document.addEventListener('astro:page-load', initDebugPopup);
  })();
</script>
