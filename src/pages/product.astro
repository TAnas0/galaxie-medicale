---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

import { Icon } from "astro-icon/components";
import { Button } from "free-astro-components";

import Card from "../components/ui/Card.astro";
import CardHeader from "../components/ui/CardHeader.astro";
import CardTitle from "../components/ui/CardTitle.astro";
import CardContent from "../components/ui/CardContent.astro";
import Badge from "../components/ui/Badge.astro";
import Footer from "../components/ui/Footer.astro";
import Header1 from "../components/Header1.astro";

let currentImageIndex = 0;
const productImages = [
  "./catalog/img/phoenix-blu-18-l/Phoenix-Blu-LCD-18.jpg",
  "./catalog/img/phoenix-blu-18-l/Phoenix-Blu-LCD-AWF-18.jpg",
  "./catalog/img/phoenix-blu-18-l/Phoenix-Blu-LCD-PRINTER-18.jpg",
  "./catalog/img/phoenix-blu-18-l/Phoenix-Blu-LED-18.jpg",
  // "./catalog/img/phoenix-blu-18-l/Phoenix-Blu-LED-AWF-18.jpg",
  // "https://images.unsplash.com/photo-1488590528505-98d2b5aba04b?w=800&h=600&fit=crop",
  // "https://images.unsplash.com/photo-1518770660439-4636190af475?w=800&h=600&fit=crop",
  // "https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?w=800&h=600&fit=crop",
  // "https://images.unsplash.com/photo-1531297484001-80022131f5a1?w=800&h=600&fit=crop",
];

const specifications = [
  { label: "Modèle", value: "Phoenix Blu Plus⁺ 18 L" },
  { label: "Classe", value: "Classe B – conforme EN 13060" },
  { label: "Volume de la chambre", value: "18 L (Ø 255 × 360 mm)" },
  { label: "Dimensions externes", value: "462 × 445 × 600 mm (L × H × P)" },
  { label: "Poids net", value: "54 kg" },
  { label: "Alimentation", value: "220–230 V AC, 50/60 Hz" },
  { label: "Consommation électrique", value: "1800 W" },
  { label: "Plage de température de stérilisation", value: "121 °C / 134 °C" },
  { label: "Pression max. de service", value: "2.5 bar" },
  { label: "Pompe à vide", value: "Double tête, vide fractionné (3 phases)" },
  {
    label: "Générateur de vapeur",
    value: "Externe, ultra-rapide, anti-calcaire",
  },
  { label: "Réservoir eau distillée", value: "4.6 L" },
  { label: "Réservoir eaux usées", value: "5.0 L" },
  { label: "Consommation d’eau par cycle", value: "0.3 – 0.6 L" },
  { label: "Affichage", value: "Écran LCD graphique multilingue" },
  {
    label: "Connectivité",
    value: "USB (clé incluse), imprimante thermique (option)",
  },
  {
    label: "Cycles",
    value: "Universel, Prion, S (non emballé), Test Vide, Bowie-Dick, Helix",
  },
  { label: "Durée du cycle le plus rapide", value: "18 minutes (Classe B)" },
  {
    label: "Capacité de charge",
    value: "Jusqu'à 5 kg non emballé / 2.5 kg emballé",
  },
  { label: "Matériau de la chambre", value: "Acier inoxydable" },
  {
    label: "Système de filtration",
    value: "Filtre bactérien + séparateur air/eau",
  },
  { label: "Mode veille", value: "Chambre maintenue chaude entre les cycles" },
  { label: "Capteur de conductivité", value: "Alarme si >15 µS" },
];

const certifications = [
  "CE 93/42/EEC (Dispositif médical)",
  "Directive 97/23/CE (PED – équipements sous pression)",
  "ISO 13485:2016 – Systèmes qualité dispositifs médicaux",
  "EN 13060 – Autoclaves à usage médical",
  "EN 61010-1 / EN 61010-2-040 – Sécurité électrique",
  "EN 61326 – Compatibilité électromagnétique",
  "EN 14971 – Gestion des risques",
];

const relatedProducts = [
  {
    name: "Advanced Monitor Pro",
    image: "./catalog/img/phoenix-blu-18-l/Phoenix-Blu-LCD-18.jpg",
    price: "Contact for Quote",
  },
  {
    name: "Portable Diagnostic Unit",
    image:
      "https://images.unsplash.com/photo-1498050108023-c5249f4df085?w=300&h=200&fit=crop",
    price: "Contact for Quote",
  },
  {
    name: "Professional Care Station",
    image:
      "https://images.unsplash.com/photo-1483058712412-4245e9b90334?w=300&h=200&fit=crop",
    price: "Contact for Quote",
  },
];

const nextImage = () => {
  currentImageIndex = (currentImageIndex + 1) % productImages.length;
};

const prevImage = () => {
  currentImageIndex =
    (currentImageIndex - 1 + productImages.length) % productImages.length;
};
---

<Layout>
  <Header1 />

  <div class="min-h-screen bg-white pt-30">
    {/* Main Content */}
    <main class="container mx-auto px-4 py-8">
      {/* Product Hero Section */}
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-12">
        {/* Image Carousel */}
        <div class="space-y-4">
          <div
            class="relative aspect-[4/3] bg-gray-100 rounded-lg overflow-hidden"
          >
            <img
              src={productImages[currentImageIndex]}
              alt="Product Image"
              class="w-full h-full object-cover"
            />
            <button
              onclick="prevImage"
              class="absolute left-4 top-1/2 -translate-y-1/2 bg-white/80 hover:bg-white p-2 rounded-full shadow-md transition-all"
            >
              <Icon name="heroicons:arrow-left" />
            </button>
            <button
              onclick="nextImage"
              class="absolute right-4 top-1/2 -translate-y-1/2 bg-white/80 hover:bg-white p-2 rounded-full shadow-md transition-all"
            >
              <Icon name="heroicons:arrow-right" />
            </button>
            <div
              class="absolute bottom-4 left-1/2 -translate-x-1/2 flex space-x-2"
            >
              {
                productImages.map((_, index) => (
                  <button
                    key={index}
                    onclick="setCurrentImageIndex"
                    class={`w-2 h-2 rounded-full transition-all ${
                      index === currentImageIndex
                        ? "bg-medical-red"
                        : "bg-white/60"
                    }`}
                  />
                ))
              }
            </div>
          </div>
          <div class="grid grid-cols-4 gap-2">
            {
              productImages.map((image, index) => (
                <button
                  key={index}
                  onclick={() => setCurrentImageIndex(index)}
                  class={`aspect-square bg-gray-100 rounded overflow-hidden border-2 transition-all ${
                    index === currentImageIndex
                      ? "border-medical-red"
                      : "border-transparent"
                  }`}
                >
                  <img
                    src={image}
                    alt={`Thumbnail ${index + 1}`}
                    class="w-full h-full object-cover"
                  />
                </button>
              ))
            }
          </div>
        </div>

        {/* Product Information */}
        <div class="space-y-6">
          <div>
            <div class="flex items-center space-x-2 mb-2">
              <Badge class="bg-medical-gray text-gray-700"
                >Professional Grade</Badge
              >
              <Badge class="bg-green-100 text-green-700">In Stock</Badge>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">
              Autoclave Phoenix Blu Plus⁺ 18 L
            </h1>
            <p class="text-xl text-gray-600">
              Autoclave de classe B 18 L, rapide et conforme aux normes médicales, pour une stérilisation sûre et efficace en cabinet
            </p>
          </div>

          <div class="space-y-4">
            <!-- <div class="flex items-center space-x-4">
              <span class="text-2xl font-bold text-gray-900"
                >Contact for Quote</span
              >
              <span class="text-sm text-gray-500"
                >Volume discounts available</span
              >
            </div> -->

            <p class="text-gray-700 leading-relaxed">
              Le Phoenix Blu Plus⁺ 18 L est un autoclave de classe B haute performance, conçu pour répondre aux exigences de stérilisation dans les cabinets dentaires, médicaux et laboratoires. Il combine un système de vide fractionné en 3 phases, un générateur de vapeur ultra-rapide et un écran LCD intuitif multilingue. Compatible avec les cycles prion, Bowie-Dick et Helix, il garantit une traçabilité complète grâce à sa connectivité USB et ses options d’impression. Sa chambre en acier inoxydable de 18 L offre une capacité optimale tout en assurant un séchage performant et une gestion intelligente de l’eau. Fiable, rapide et ergonomique, il est pensé pour les professionnels exigeants.
            </p>

            <!-- <div class="flex flex-col sm:flex-row gap-3">
              <Button
                class="bg-medical-red hover:bg-medical-red-dark text-white flex items-center"
              >
                <Icon name="heroicons:phone" />
                Request Quote
              </Button>
              <Button
                variant="outline"
                class="border-medical-red text-medical-red hover:bg-medical-red hover:text-white"
              >
                <Icon name="heroicons:mail" />
                Contact Sales
              </Button>
            </div> -->
          </div>

          {/* Brand Info */}
          <Card class="bg-medical-gray">
            <CardContent className="p-4">
              <div class="flex items-center space-x-3">
                <div
                  class="w-12 h-12 bg-white rounded-lg flex items-center justify-center"
                >
                  <span class="font-bold text-medical-red">MC</span>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">
                    Guarisco Medical Sterilizer
                  </h3>
                  <p class="text-sm text-gray-600">
                    GUARISCO MEDICAL STERILIZER s.r.l, formerly known as MEDICAL
                    TRADING, boasts a 60-year history as a premier manufacturer
                    of medical sterilization devices.
                  </p>
                </div>
              </div>
            </CardContent>
          </Card>
        </div>
      </div>

      {/* Technical Specifications */}
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
        <Card>
          <CardHeader>
            <CardTitle className="flex items-center text-gray-900">
              <Icon name="heroicons:document" />
              Technical Specifications
            </CardTitle>
          </CardHeader>
          <CardContent className="space-y-3">
            {
              specifications.map((spec, index) => (
                <div
                  key={index}
                  class="flex justify-between items-center py-1 border-b border-gray-100 last:border-b-0"
                >
                  <span class="text-sm text-gray-600">{spec.label}</span>
                  <span class="text-sm font-medium text-gray-900">
                    {spec.value}
                  </span>
                </div>
              ))
            }
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle className="flex items-center text-gray-900">
              <Icon name="heroicons:shield-check" />
              Certifications & Standards
            </CardTitle>
          </CardHeader>
          <CardContent className="space-y-3">
            {
              certifications.map((cert, index) => (
                <div key={index} class="flex items-center space-x-3">
                  <Icon name="heroicons:shield-check" />
                  <span class="text-sm text-gray-700">{cert}</span>
                </div>
              ))
            }
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle className="text-gray-900">
              Utilisation prévue & Applications
            </CardTitle>
          </CardHeader>
          <CardContent className="space-y-4">
            <div>
              <h4 class="font-medium text-gray-900 mb-2">
                Applications principales
              </h4>
              <ul class="space-y-1 text-sm text-gray-700">
                <li>• Cabinets dentaires et médicaux</li>
                <li>• Laboratoires et cliniques vétérinaires</li>
                <li>• Centres de chirurgie ambulatoire</li>
                <li>• Instituts de beauté et studios de tatouage</li>
              </ul>
            </div>
            <div>
              <h4 class="font-medium text-gray-900 mb-2">
                Fonctionnalités clés
              </h4>
              <ul class="space-y-1 text-sm text-gray-700">
                <li>• Cycles de stérilisation classe B (conformes EN 13060)</li>
                <li>• Système de vide fractionné haute performance</li>
                <li>
                  • Générateur de vapeur externe rapide avec anti-calcaire
                </li>
                <li>• Écran LCD multilingue avec suivi des cycles</li>
                <li>• Connectivité USB et imprimante en option</li>
                <li>• Tests automatiques : Bowie-Dick, Helix, Test Vide</li>
              </ul>
            </div>
          </CardContent>
        </Card>
      </div>

      {/* Downloads Section */}
      <Card class="mb-12">
        <CardHeader>
          <CardTitle className="flex items-center text-gray-900">
            <Icon name="heroicons:arrow-down-tray" />
            Documentation & Resources
          </CardTitle>
        </CardHeader>
        <CardContent>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <Button
              variant="outline"
              class="h-auto p-4 flex flex-col items-center space-y-2 hover:bg-medical-gray"
            >
              <Icon name="heroicons:document" />
              <span class="font-medium">Product Datasheet</span>
              <span class="text-xs text-gray-500">PDF • 2.4 MB</span>
            </Button>
            <Button
              variant="outline"
              class="h-auto p-4 flex flex-col items-center space-y-2 hover:bg-medical-gray"
            >
              <Icon name="heroicons:document" />
              <span class="font-medium">User Manual</span>
              <span class="text-xs text-gray-500">PDF • 8.1 MB</span>
            </Button>
            <Button
              variant="outline"
              class="h-auto p-4 flex flex-col items-center space-y-2 hover:bg-medical-gray"
            >
              <Icon name="heroicons:document" />
              <span class="font-medium">Service Manual</span>
              <span class="text-xs text-gray-500">PDF • 5.7 MB</span>
            </Button>
            <Button
              variant="outline"
              class="h-auto p-4 flex flex-col items-center space-y-2 hover:bg-medical-gray"
            >
              <Icon name="heroicons:document" />
              <span class="font-medium">Online Training</span>
              <span class="text-xs text-gray-500">External Link</span>
            </Button>
          </div>
        </CardContent>
      </Card>

      {/* Related Products */}
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-6">
          Related Products & Accessories
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {
            relatedProducts.map((product, index) => (
              <Card key={index} class="hover:shadow-lg transition-shadow">
                <div class="aspect-[3/2] bg-gray-100 rounded-t-lg overflow-hidden">
                  <img
                    src={product.image}
                    alt={product.name}
                    class="w-full h-full object-cover"
                  />
                </div>
                <CardContent className="p-4">
                  <h3 class="font-semibold text-gray-900 mb-2">
                    {product.name}
                  </h3>
                  <p class="text-sm text-gray-600 mb-3">
                    Professional medical equipment for advanced care
                  </p>
                  <div class="flex items-center justify-between">
                    <span class="font-medium text-medical-red">
                      {product.price}
                    </span>
                    <Button
                      size="sm"
                      variant="outline"
                      class="text-medical-red border-medical-red hover:bg-medical-red hover:text-white"
                    >
                      View Details
                    </Button>
                  </div>
                </CardContent>
              </Card>
            ))
          }
        </div>
      </div>
    </main>
  </div>

  <Footer />
</Layout>
